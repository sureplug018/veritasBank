<%- include('partials/dashboardHeaderNav') %>

<div class="row gy-4">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0"></h5>
      </div>
      <div class="card-body">
        <form class="row gy-3 needs-validation bill-form">


          <div class="col-md-6">
            <label class="form-label">Select Bill</label>
            <select id="type" class="form-control select-gateway">
              <option value="" disabled selected>-- Select Bill --</option>
              <option value="Cable">Cable</option>
              <option value="Rent">Rent</option>
              <option value="Phone">Phone</option>
              <option value="Gas">Gas</option>
              <option value="Electricity">Electricity</option>
            </select>
          </div>
          <div class="col-md-6 description">
            <label class="form-label">Bill Specification</label>
            <input id="specification" type="text" class="form-control" placeholder="Enter Bill Specification" required>
          </div>
          <div class="col-md-6">
            <label class="form-label">Select Account</label>
            <select id="account" class="form-control select-gateway">
              <option value="<%= user.accountNumber %>"><%= user.accountNumber %></option>
            </select>
          </div>
          <div class="col-md-6 amount">
            <label class="form-label">Amount</label>
            <input type="number" id="amount" class="form-control" placeholder="Enter Amount" required>
          </div>
          <!-- </div> -->

          <!-- general amount -->


          <div class="col-12">
            <button class="btn btn-primary-600" data-bs-toggle="modal" data-bs-target="#exampleModalDelete">Proceed</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Modal Delete Event -->
<div class="modal fade billModal" id="exampleModalDelete" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-sm modal-dialog modal-dialog-centered">
    <div class="modal-content radius-16 bg-base">
      <div class="modal-body p-24 text-center">
        <h6 class="text-md fw-semibold text-primary-light mb-0">
          Enter 4 digit Transaction Pin
        </h6>
        <p></p>
        <input type="password" id="transactionPin" class="form-control" placeholder="****">
        <div class="d-flex align-items-center justify-content-center gap-3 mt-24">
          <button class="w-50 btn btn-primary-600 border border-primary-600 text-md px-24 py-12 radius-8 bill-btn">
            Pay Bill
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/dashboardFooterNav') %>
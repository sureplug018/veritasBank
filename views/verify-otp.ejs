<%- include('partials/dashboardHeader') %>

<section class="auth forgot-password-page bg-base d-flex flex-wrap">
  <div class="auth-left d-lg-block d-none">
    <div class="d-flex align-items-center flex-column h-100 justify-content-center">
      <img src="/assets/images/auth/forgot-pass-img.png" alt="">
    </div>
  </div>
  <div class="auth-right py-32 px-24 d-flex flex-column justify-content-center">
    <div class="max-w-464-px mx-auto w-100">
      <div>
        <a href="/" class="mb-40 max-w-290-px">
          <img style="width: 200px; height: auto;" src="/assets/images/logo.png" alt="">
        </a>
        <h4 class="mb-12">Verify OTP</h4>
        <!-- <p class="mb-32 text-secondary-light text-lg">Enter the email address associated with your account and we will send you a link to reset your password.</p> -->
      </div>
      <form class="otp-form">
        <div class="icon-field">
          <span class="icon top-50 translate-middle-y">
          </span>
          <input type="text" id="otp" class="form-control h-56-px bg-neutral-50 radius-12" placeholder="Enter OTP">
        </div>
        <button class="btn btn-primary text-sm btn-sm px-12 py-16 w-100 radius-12 mt-32 otp-btn resend-otp-btn">Resend OTP</button>
        <div class="text-center">
          <a href="/sign-in" class="text-primary-600 fw-bold mt-24">Back to Sign In</a>
        </div>


      </form>
    </div>
  </div>
</section>

<%- include('partials/dashboardFooter') %>
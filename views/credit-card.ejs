<!-- Start Overview Box Area -->
<section class="overview-box-area ptb-100">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <div class="overview-box-image">
          <img src="/assets/img/overview-box-1.png" alt="image">
